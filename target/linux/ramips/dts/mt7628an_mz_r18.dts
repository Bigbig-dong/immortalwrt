/dts-v1/;

#include "mt7628an.dtsi"

/ {
    compatible = "mz,mz-r18", "mediatek,mt7628an-soc";
    model = "mz r18";

    memory@0 {
        device_type = "memory";
        reg = <0x0 0x8000000>;
    };

    chosen {
        bootargs = "console=ttyS0,57600";
    };

    leds {
        compatible = "gpio-leds";

        power: power {
            label = "mz-r18:blue:power";
            gpios = <&gpio 4 GPIO_ACTIVE_HIGH>;
            default-state = "keep";
        };
    };

    keys {
        compatible = "gpio-keys";

        reset {
            label = "reset";
            gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
            linux,code = <KEY_RESTART>;
        };
    };
};

&uart0 {
    status = "okay";
};

&spi0 {
    status = "okay";

    flash@0 {
        compatible = "spi-nor";
        reg = <0>;
        spi-max-frequency = <48000000>;

        partitions {
            compatible = "fixed-partitions";
            #address-cells = <1>;
            #size-cells = <1>;

            partition@0 {
                label = "u-boot";
                reg = <0x0 0x30000>;
                read-only;
            };

            partition@30000 {
                label = "config";
                reg = <0x30000 0x10000>;
                read-only;
            };

            factory: partition@40000 {
                label = "factory";
                reg = <0x40000 0x10000>;
                read-only;
            };

            partition@50000 {
                label = "kernel";
                reg = <0x50000 0x13af80>;
            };

            partition@18af80 {
                label = "rootfs";
                reg = <0x18af80 0xdc5080>;
            };

            partition@f50000 {
                label = "storage";
                reg = <0xf50000 0xb0000>;
            };

            partition@1000000 {
                label = "firmware";
                reg = <0x1000000 0xf00000>;
            };
        };
    };
};

&ethernet {
    mtd-mac-address = <&factory 0x4>;
    mediatek,portmap = "wllll";
};

&esw {
    mediatek,portmap = <0x3e>;
    mediatek,led_polarity = <1>;
};

&wmac {
    status = "okay";
    mtd-mac-address = <&factory 0x4>;
    mediatek,mtd-eeprom = <&factory 0x0>;
};

&pcie {
    status = "okay";
};

&pcie0 {
    wifi@0,0 {
        compatible = "pci14c3,7662";
        reg = <0x0000 0 0 0 0>;
        mediatek,mtd-eeprom = <&factory 0x8000>;
        ieee80211-freq-limit = <5000000 6000000>;
        
        /* MT7612E 5GHz PCIe无线网卡 */
        pci-id = "14c3:7662";
    };
};

&ehci {
    status = "okay";
};

&ohci {
    status = "okay";
};

&i2c {
    status = "disabled";  // 没有检测到I2C设备，禁用
};

&state_default {
    gpio {
        groups = "i2c", "refclk", "wdt", "wled_an";
        function = "gpio";
    };
};
